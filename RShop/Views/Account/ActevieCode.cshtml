@using RShop.ViewModels
@model ActiveCodeViewModel
@{
    ViewData["Title"] = "ActevieCode";
}

<h1>ActevieCode</h1>

<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10" style="margin-top:30px;">
    <h4 class="text-center">فعال سازی حساب کاربری</h4>
    <form asp-action="ConfirmCode">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Code" class="control-label"></label>
            <label asp-for="Code" class="form-control"></label>
            <span asp-validation-for="Code"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="فعال سازی" class="btn-block"/>
        </div>

    </form>
</div>