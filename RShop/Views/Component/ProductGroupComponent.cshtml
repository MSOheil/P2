@using RShop.Data.Repositories
@inject IGroupRepository _groupRepository


@{
    ViewData["Title"] = "ProductGroupComponent";
}
<ul class="list-group">

    @foreach (var item in _groupRepository.GetGroupForShow())
    {

        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/Group/@item.ID/@item.GroupName">@item.GroupName</a>
            <span class="badge badge-primary badge-pill">@item.ProductCount</span>
        </li>




    }
</ul>