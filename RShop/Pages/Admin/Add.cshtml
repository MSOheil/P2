@page
@model RShop.Pages.Admin.AddModel
@{
    ViewData["Title"] = "Add";
}


<h1>افزودن کالا</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <dl class="dl-horizontal">
        <dd><label asp-for="Product.Name"></label></dd>
        <dt>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </dt>
        <dd><label asp-for="Product.Description"></label></dd>
        <dt>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
            <span asp-validation-for="Product.Description"></span>
        </dt>
        <dd><label asp-for="Product.Price"></label></dd>
        <dt>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price"></span>
        </dt>
        <dd><label asp-for="Product.Count"></label></dd>
        <dt>
            <input asp-for="Product.Count" class="form-control" />
            <span asp-validation-for="Product.Count"></span>
        </dt>
        <dd><label asp-for="Product.Picture"></label></dd>
        <dt>
            <input asp-for="Product.Picture" />
            <span asp-validation-for="Product.Picture"></span>
        </dt>
        <dd>گروه</dd>
        <dt>
           @foreach (var item in Model.Product.Categories)
           {
               <p>
                   <input type="checkbox" name="selectedGroups" value="@item.ID"/>@item.Name
               </p>
           }
        </dt>
        <dd></dd>
        <dt>
            <input type="submit" class="btn btn-success" value="ثبت" />
        </dt>
    </dl>



</form>

